<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="002-create-document-history-table" author="Anton Skomorokhin">

        <createTable tableName="document_history">

            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="document_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="action" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="performed_by" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="performed_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="comment" type="TEXT"/>

        </createTable>

    </changeSet>

</databaseChangeLog>
